---

import Layout from "../layouts/Layout.astro";---

<Layout>
    <div class="h-25"></div>
    <h1 class="text-white font-body font-light mx-35 text-4xl my-2">Any% Movement</h1>
    <div class="border-t-1 border-stone-800 w-310 h-1 mx-35 my-2"></div>
    <p class="text-white font-body mx-35 my-2 font-light">Search by area:</p>
    <!-- Grid Container -->
    <div class="grid grid-cols-7 h-15 text-center text-white font-body uppercase font-extralight">

        <!-- Item 1: Moss Grotto -->
        <div class="relative overflow-hidden group cursor-pointer">
            <img src="https://static0.thegamerimages.com/wordpress/wp-content/uploads/wm/2025/09/mixcollage-04-sep-2025-09-14-pm-9703.jpg" class="object-cover w-full h-full">
            <div class="absolute inset-0 flex items-center justify-center bg-black/50 hover:bg-black/20 hover:scale-110 transition-all duration-300">Moss Grotto</div>
        </div>

        <!-- Item 2: The Marrow -->
        <div class="relative overflow-hidden group cursor-pointer">
            <img src="https://assetsio.gnwcdn.com/hollow-knight-silksong-walkthrough-2-header.jpg?width=690&quality=85&format=jpg&dpr=3&auto=webp" class="object-cover w-full h-full">
            <div class="absolute inset-0 flex items-center justify-center bg-black/50 hover:bg-black/20 hover:scale-110 transition-all duration-300">The Marrow</div>
        </div>

        <!-- Item 3: Deep Docks -->
        <div class="relative overflow-hidden group cursor-pointer">
            <img src="https://assetsio.gnwcdn.com/hollow-knight-silksong-walkthrough-5-header.jpg?width=1200&height=600&fit=crop&enable=upscale&auto=webp" class="object-cover w-full h-full">
            <div class="absolute inset-0 flex items-center justify-center bg-black/50 hover:bg-black/20 hover:scale-110 transition-all duration-300">Deep Docks</div>
        </div>

        <!-- Remaining Items -->
        <div class="relative overflow-hidden group cursor-pointer">
            <img src="https://assetsio.gnwcdn.com/hollow-knight-silksong-walkthrough-00178.jpg?width=380&height=214&fit=crop&quality=85&format=jpg&auto=webp" class="object-cover w-full h-full">
            <div class="absolute inset-0 flex items-center justify-center bg-black/50 hover:bg-black/20 hover:scale-110 transition-all duration-300">Far Fields</div>
        </div>

        <div class="relative overflow-hidden group cursor-pointer">
            <img src="https://static0.gamerantimages.com/wordpress/wp-content/uploads/2025/09/silksong-where-to-do-after-greymoor-what-to-do-first-greymoor-signs.jpg" class="object-cover w-full h-full">
            <div class="absolute inset-0 flex items-center justify-center bg-black/50 hover:bg-black/20 hover:scale-110 transition-all duration-300">Greymoor</div>
        </div>
        <div class="relative overflow-hidden group cursor-pointer">
            <img src="https://assetsio.gnwcdn.com/Silksong-Shellwood-Walkthrough.jpg?width=1200&height=600&fit=crop&enable=upscale&auto=webp" class="object-cover w-full h-full">
            <div class="absolute inset-0 flex items-center justify-center bg-black/50 hover:bg-black/20 hover:scale-110 transition-all duration-300">Shellwood</div>
        </div>

        <div class="relative overflow-hidden group cursor-pointer">
            <img src="https://insider-gaming.com/wp-content/uploads/2025/09/hollow-knight-silksong-blasted-steps.jpg" class="object-cover w-full h-full">
            <div class="absolute inset-0 flex items-center justify-center bg-black/50 hover:bg-black/20 hover:scale-110 transition-all duration-300">Blasted Steps</div>
        </div>
    </div>

    <div class="grid grid-cols-3 h-105 mx-50 gap-10 mt-10">
        <div class="grid grid-rows-[40%_60%] bg-stone-950 ring-1 ring-stone-900 rounded-2xl hover:scale-105 hover:ring-red-500 hover:bg-stone-900 transition-all duration-300">
            <div class="bg-stone-800 w-full rounded-t-2xl relative overflow-hidden">
                <img src="https://github.com/Noslepivy/The-Silksong-Speedrunning-Mega-Thread/blob/main/Gifs/General%20Movement/air-pogo.gif?raw=true" class="object-cover overflow-hidden opacity-90">
            </div>
            <div class="text-white mx-5 mt-7 mb-5 flex flex-col gap-y-4 relative">
                <h1 class="text-2xl flex flex-wrap relative items-center">Title
                    <div class="right-0 absolute bg-red-500 text-[10px] text-center justify-center items-center font-bold ring-red-500 py-0.5 w-14 rounded-2xl">Key</div></h1>
